<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/list_view_item_padding"
    android:paddingRight="@dimen/list_view_item_padding"
    android:paddingTop="@dimen/list_view_item_padding"
    android:paddingBottom="@dimen/list_view_item_padding"
    android:layout_margin="@dimen/list_item_margin">


    <ImageView
        android:id="@+id/listItemImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="@dimen/list_view_item_margin"
        android:padding="@dimen/std_image_padding"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:id="@+id/listItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="5dp"
        android:text="My Title"
        android:textSize="@dimen/paragraph"
        android:layout_margin="@dimen/list_view_item_margin"
        android:padding="@dimen/std_textbox_padding"
        android:layout_toLeftOf="@+id/listItemImage"
        android:layout_toEndOf="@+id/listItemImage"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/listItemEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/std_textbox_marging"
        android:text="email"
        android:textSize="@dimen/paragraph"
        android:padding="@dimen/std_textbox_padding"
        android:layout_below="@+id/listItemName"
        android:layout_toLeftOf="@+id/listItemImage"
        android:layout_toEndOf="@+id/listItemImage"
        android:layout_alignParentEnd="true"
        />


</RelativeLayout>