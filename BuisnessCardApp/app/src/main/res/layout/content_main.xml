<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.woodlee.mt_1_u3031423.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:paddingLeft="@dimen/std_layout_padding"
    android:paddingRight="@dimen/std_layout_padding"
    android:paddingTop="@dimen/std_layout_padding"

    >

   <TextView
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:text="@string/app_title"
       android:textSize="@dimen/H1"
       android:gravity="center"
       android:background="@drawable/my_border"
       android:textAlignment="center"
       android:layout_margin="@dimen/std_textbox_marging"
       android:padding="@dimen/std_textbox_padding"
       />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/university_of_canberra"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/my_border"
        android:layout_margin="@dimen/std_image_margin"
        android:padding="@dimen/std_image_padding"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:gravity="center"
        android:layout_margin="@dimen/std_textbox_marging"
        android:background="@drawable/my_border"
        android:padding="@dimen/std_textbox_padding"
        android:text="@string/app_intro"
        android:textAlignment="center"
        android:textSize="@dimen/paragraph" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:layout_gravity="center"
        android:background="@color/design"
        android:layout_margin="@dimen/std_button_margin"
        android:onClick="gotolistview"/>
</LinearLayout>
